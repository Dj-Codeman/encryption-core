#!/bin/bash

source /opt/encore/scripts/functions.sh

function show_help {
    echo "Help your self foo"
}

if [[ "$1" == "write" ]]; then
    
    file="$(realpath $2)"
    shortname="$3"
    class="$4"

    if [[ -z "$file" ]]; then
    echo "No file given"
    exit 0
    fi

    if [[ -z "$shortname" ]]; then
    echo "No shortname given"
    exit 0
    fi

    if [[ -z "$class" ]]; then
    echo "No class given"
    exit 0
    fi

    fwrite "$file" "$class" "$shortname"

elif [[ "$1" == "read" ]]; then

    if [[ -z "$shortname" ]]; then
    echo "No shortname given"
    exit 0
    fi

    if [[ -z "$class" ]]; then
    echo "No class given"
    exit 0
    fi

    fread "$shortname" "$class"

elif [[ "$1" == "destroy" ]]; then

    if [[ -z "$shortname" ]]; then
    echo "No shortname given"
    exit 0
    fi

    if [[ -z "$class" ]]; then
    echo "No class given"
    exit 0
    fi

    destroy "$shortname" "$class"

elif [[ "$1" == "initialize" ]]; then

    initialize
    exit 0

else 
   show_help
   exit 0
fi